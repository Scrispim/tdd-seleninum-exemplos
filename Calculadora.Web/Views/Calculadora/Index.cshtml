@model Calculadora.Web.Models.CalculadoraModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Calculadora", FormMethod.Get))
{

    <div class="row">
        <div class="col-md-6">
            <div class="form-horizontal">
                <label>Frist number:</label>
                @Html.TextBoxFor(p => p.PrimeiroNumero, new { @class = "form-control" })
            </div>
            <div class="form-horizontal">
                <label>Seconde number:</label>
                @Html.TextBoxFor(p => p.SegundoNumero, new { @class = "form-control" })
            </div>
            <div class="form-horizontal">
                <label>Operation:</label>
                <select name="Operacao" class="form-control">
                    <option value="0">Addition</option>
                    <option value="1">Subtraction</option>
                    <option value="2">Multiplication</option>
                    <option value="3">Division</option>
                </select>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="submit" class="btn btn-default" name="btnCalcular" value="Calculate">


            <div class="form-horizontal">
                <label>Result:</label>
                @Html.TextBoxFor(p => p.Resultado, new { @class = "form-control", disabled = "disabled" })

            </div>
        </div>
    </div>
}